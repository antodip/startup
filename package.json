{
  "name": "startup",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "install:package": "npm install",
    "install:typings": "typings install",
    "es5": "tsc -p .",
    "browserify": "mkdir -p dist/client && browserify -s main client/app/main.js > dist/client/bundle.js",
    "minify:frontend": "uglifyjs dist/client/bundle.js  --compress --mangle -o dist/client/bundle.min.js",
    "obfuscate:backend": "node obfuscator.js",
    "copy:package": "cp package.json dist/package.json",
    "copy:config": "cp -a config dist/config",
    "copy:html": "find client   -mindepth 2  -name *.html -exec cp --parents {} dist \\;",
    "copy:icons": "cp -a client/icons dist/client/icons",
    "postcopy:html": "cp  client/index_prod.html dist/client/index.html",
    "npm_remote_install": "cd dist && npm install --production && npm shrinkwrap && cd ..",
    "build:package:prod": "npm run copy:package && npm run copy:config && npm run npm_remote_install",
    "build:frontend": "npm run browserify && npm run minify:frontend && npm run copy:icons && npm run copy:html",
    "prebuild": "npm run clean && npm run build:local",
    "build": "npm run build:frontend && npm run obfuscate:backend",
    "postbuild": "npm run build:package:prod",
    "prebuild:local": "npm run install:package && npm run install:typings",
    "build:local": "npm run es5",
    "karma": "./node_modules/karma/bin/karma start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antodip/startup.git"
  },
  "author": "anto",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/antodip/startup/issues"
  },
  "homepage": "https://github.com/antodip/startup#readme",
  "dependencies": {
    "@tech/opc-lib": "^2.1.0",
    "chart.js": "2.3.0",
    "config": "^1.24.0",
    "core-js": "^2.4.1",
    "engine.io": "^2.0.1",
    "hapi": "^16.1.0",
    "inert": "^4.1.0",
    "minimist": "1.2.0",
    "moment": "^2.17.1",
    "primus.io": "4.0.0",
    "reflect-metadata": "^0.1.3",
    "systemjs": "^0.20.7",
    "xtend": "4.0.1",
    "zone.js": "^0.6.23"
  },
  "devDependencies": {
    "@angular/common": "^2.4.7",
    "@angular/compiler": "^2.4.7",
    "@angular/core": "^2.4.7",
    "@angular/forms": "^2.4.7",
    "@angular/http": "^2.4.7",
    "@angular/platform-browser": "^2.4.7",
    "@angular/platform-browser-dynamic": "^2.4.7",
    "@angular/router": "^3.4.7",
    "@angular/upgrade": "^2.4.7",
    "angular2-in-memory-web-api": "0.0.21",
    "bootstrap": "^3.3.6",
    "browserify": "^14.0.0",
    "glob": "7.1.1",
    "gulp": "^3.9.1",
    "gulp-tslint": "^7.0.1",
    "karma": "^1.4.1",
    "karma-chrome-launcher": "^2.0.0",
    "karma-tap": "^3.1.1",
    "karma-typescript": "^2.1.7",
    "ng2-charts": "1.3.0",
    "obfuscator": "0.5.4",
    "rxjs": "^5.1.0",
    "sinon": "^1.17.7",
    "source-map-support": "^0.4.11",
    "tape": "^4.6.3",
    "typescript": "^2.1.4",
    "typings": "^2.1.0",
    "uglify-js": "^2.7.5",
    "webpack": "^2.2.1"
  }
}
